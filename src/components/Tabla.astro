import type { VotosResponse } from '../types/VotosResponse';

const resp = await fetch('http://localhost:8080/tabla');
const data = await resp.json();

const resultados: Resultados[] = data.map((r: any[]) => ({
  id: r[0],
  nombre: r[1],
  bandera: r[2],
  cancionYoutube: r[3],
  cantante: r[4],
  cancion: r[5],
  votoTotal: r[6]
}));

